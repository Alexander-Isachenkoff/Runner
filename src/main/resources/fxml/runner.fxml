<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.ColumnConstraints?>
<?import javafx.scene.layout.GridPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.RowConstraints?>

<AnchorPane fx:id="gamePane" prefHeight="360.0" prefWidth="720.0" stylesheets="@style.css" xmlns="http://javafx.com/javafx/8.0.171" xmlns:fx="http://javafx.com/fxml/1" fx:controller="RunnerController">
    <children>
      <GridPane layoutX="20.0" AnchorPane.leftAnchor="0.0" AnchorPane.rightAnchor="0.0">
         <columnConstraints>
            <ColumnConstraints hgrow="SOMETIMES" minWidth="10.0" />
            <ColumnConstraints hgrow="SOMETIMES" minWidth="10.0" />
         </columnConstraints>
         <rowConstraints>
            <RowConstraints minHeight="10.0" vgrow="SOMETIMES" />
         </rowConstraints>
         <children>
            <HBox spacing="10.0">
               <children>
                    <Label styleClass="hud-label" text="Score:" textFill="#888888" />
                  <Label fx:id="scoreLabel" styleClass="hud-label" text="50" />
               </children>
            </HBox>
            <HBox alignment="TOP_RIGHT" spacing="10.0" GridPane.columnIndex="1">
               <children>
                    <Label styleClass="hud-label" text="Record:" textFill="#888888" />
                  <Label fx:id="recordLabel" styleClass="hud-label" text="1000" />
               </children>
            </HBox>
         </children>
         <padding>
            <Insets bottom="20.0" left="20.0" right="20.0" top="20.0" />
         </padding>
      </GridPane>
    </children>
</AnchorPane>
